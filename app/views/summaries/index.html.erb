<h1 class="profile-page">Profile</h1>
<div class="profile-container">
  <div class="profile-infos">

    <%= cl_image_tag current_user.photo_url, height: 200, width: 200, crop: :fill %>
    <p>Email: <%= current_user.email %></p>

  </div>
</div>

<div class="dashboard">

  <h1 style="text-align: center">My Digests</h1>
  <div class="dashboard-container">

<!-- show all the tags in the tag_list -->

    <% @user.summaries.each do |summary| %>
    <div class="dashboard-card">
      <h3><%= summary.title %></h3>
      <p><%= summary.text %></p>
      <p><% summary.tag_list.each do |tag| %>
        <%= link_to tag, tagged_path(tag: tag) %>
      <% end %></p>
      <%= link_to 'Explore more', summary %>

        <!-- 1. by click the link, a form will pop up to let user key in the tag they want for the summary -->
      <%#= link_to 'Add Tags', tagged_path, remote: true %>
      <%= link_to 'Delete your summary', summary, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
      <% end %>

  </div>

  <br>

  <%= link_to 'Import another article', new_summary_path %>

</div>
