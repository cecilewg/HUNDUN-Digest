<p id="notice"><%= notice %></p>

<h1>Summaries</h1>

<% @sample = Summary.first %>
<%= @sample.title %>
<%= @sample.text %>



  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>


    <% @user.summaries.each do |summary| %>
    <div class="card">
        <td><%= summary.title %></td>
        <td><%= summary.text %></td>
        <%= render 'tags', summary: summary %>
        <p><% summary.tag_list.each do |tag| %>
          <%= link_to tag, tagged_path(tag: tag) %>
        <% end %></p>
        <td><%= link_to 'Show', summary %></td>

        <!-- 1. by click the link, a form will pop up to let user key in the tag they want for the summary -->
        <td><%= link_to 'add tags to the summary', tagged_path, remote: true %></td>
        <td><%= link_to 'delete the summary from Dashboard', summary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </div>
      </tr>
    <% end %>



