
  <%= simple_form_for(@summary) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs import-input">
      <%= f.input :article_url, placeholder: "Paste your article url here" %>
    </div>

    <div class="form-actions import-btn">
      <%= f.button :submit %>
    </div>
  <% end %>




