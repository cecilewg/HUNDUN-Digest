

<div class="summarized-container">
  <div id="isItLoaded">

<p>
  <h1><strong>
  <%= @summary.title %></strong></h1>
</p>


    <p id="url">
      <strong>Url:</strong>
      <%= @summary.article_url %>
    </p>

    <p>
      <strong >Text:</strong>
      <%= @summary.text %>
    </p>

  </div>
</div>

<!-- Recommend related summaries by tags -->
<h3>Related Summries</h3>
<ul>
  <% @related_summaries.each do |r| %>
    <li><%= r.title %></li>
    <li><%= r.text %></li>
  <% end %>
</ul>


<%= render 'tags', summary: @summary %>

<%= link_to 'Save to Dashboard', summaries_path(@summary) %>
<%= link_to 'Back', summaries_path %>

